<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/grey">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.abecool.font_plugin.customView.FaTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textfa"
            android:text="@string/fa_align_justify"
            android:textSize="30sp"
            android:textColor="@color/darkturquoise"/>
        <com.abecool.font_plugin.customView.AppleFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国AppleFontTextView"
            android:textSize="30sp"
            android:textColor="@color/black"/>
    <com.abecool.font_plugin.customView.FZ_cartoonTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中国FZ_cartoonTextView"
        android:textSize="30sp"
        android:textColor="@color/rosybrown"/>
        <com.abecool.font_plugin.customView.RSBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国RSBoldTextView"
            android:textSize="30sp"/>
        <com.abecool.font_plugin.customView.RSLightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国RSLightTextView"
            android:textSize="30sp"/>
        <com.abecool.font_plugin.customView.RSRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国RSRegular"
            android:textSize="30sp"/>
        <com.abecool.font_plugin.customView.RSThin
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国RSThinTextView"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国abcdefgh"
            android:id="@+id/tv"
            android:textSize="30sp"
            android:textColor="@color/blueviolet"/>
    </LinearLayout>



</LinearLayout>
